<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<body>

<metal:content-core fill-slot="content-core">

    <h1>Certyfikaty</h1>

    <tal:block tal:define="certificates view/get_certificates">
        <div>
            <h2>Aktywne</h2>
            <ul>
                <li tal:repeat="certificate python: certificates.get('Active')">
                    <a tal:attributes="href certificate/URL"
                       tal:content="certificate/Title">
                    <a>
                </li>
            </ul>
        </div>
        <div>
            <h2>Nieaktywne</h2>
            <ul>
                <li tal:repeat="certificate python: certificates.get('NonActive')">
                    <a tal:attributes="href certificate/URL"
                       tal:content="certificate/Title">
                    <a>
                </li>
            </ul>
        </div>
    </tal:block>

</metal:content-core>
</body>
</html>